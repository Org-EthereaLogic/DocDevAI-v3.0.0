  "version": "3.0.0",
  "description": "DevDocAI CLI Module 1: Core Infrastructure",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
