# DevDocAI v3.6.0 Frontend Environment Configuration

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# =============================================================================
# Application Configuration
# =============================================================================

# Application environment
VITE_APP_ENV=development

# Application title
VITE_APP_TITLE=DevDocAI

# Application version
VITE_APP_VERSION=3.6.0

# Application description
VITE_APP_DESCRIPTION=AI-powered documentation generation and analysis system

# =============================================================================
# Feature Flags
# =============================================================================

# Enable development tools and debugging
VITE_DEV_TOOLS=true

# Enable API request/response logging
VITE_API_LOGGING=true

# Enable performance monitoring
VITE_PERFORMANCE_MONITORING=true

# Enable PWA features
VITE_PWA_ENABLED=true

# Enable service worker
VITE_SERVICE_WORKER=false

# =============================================================================
# Analytics and Monitoring
# =============================================================================

# Enable analytics (set to false for privacy-first mode)
VITE_ANALYTICS_ENABLED=false

# Analytics provider (google, mixpanel, custom)
VITE_ANALYTICS_PROVIDER=

# Analytics tracking ID
VITE_ANALYTICS_ID=

# Enable error reporting
VITE_ERROR_REPORTING=false

# Error reporting service (sentry, bugsnag, custom)
VITE_ERROR_SERVICE=

# Error service DSN
VITE_ERROR_DSN=

# =============================================================================
# UI/UX Configuration
# =============================================================================

# Default theme (light, dark, auto)
VITE_DEFAULT_THEME=auto

# Default language (en, es, fr, de, ja, zh, pt, it, ru, ko)
VITE_DEFAULT_LANGUAGE=en

# Enable animations by default
VITE_ANIMATIONS_ENABLED=true

# Enable sounds by default
VITE_SOUNDS_ENABLED=false

# Default sidebar state (expanded, collapsed)
VITE_SIDEBAR_DEFAULT=expanded

# =============================================================================
# Security Configuration
# =============================================================================

# Content Security Policy enforcement level (strict, moderate, permissive)
VITE_CSP_LEVEL=moderate

# Enable HTTPS redirect in production
VITE_FORCE_HTTPS=true

# Session timeout in minutes
VITE_SESSION_TIMEOUT=480

# =============================================================================
# Integration Configuration
# =============================================================================

# Enable VS Code extension integration
VITE_VSCODE_INTEGRATION=true

# WebSocket connection URL (for real-time features)
VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# File upload maximum size in MB
VITE_MAX_UPLOAD_SIZE=10

# =============================================================================
# Development Configuration
# =============================================================================

# Hot module replacement
VITE_HMR=true

# Development server port
VITE_DEV_PORT=5173

# Development server host
VITE_DEV_HOST=localhost

# Enable source maps in development
VITE_SOURCE_MAPS=true

# =============================================================================
# Build Configuration
# =============================================================================

# Build target (es2015, es2017, es2018, es2019, es2020, esnext)
VITE_BUILD_TARGET=es2020

# Enable bundle analysis
VITE_BUNDLE_ANALYZER=false

# Minify code in production
VITE_MINIFY=true

# Tree shake unused code
VITE_TREE_SHAKE=true

# =============================================================================
# Deployment Configuration
# =============================================================================

# Base URL for assets (for CDN deployment)
VITE_ASSET_BASE_URL=/

# Public path for routing
VITE_PUBLIC_PATH=/

# Enable gzip compression
VITE_GZIP=true

# Enable brotli compression
VITE_BROTLI=false