# DevDocAI v3.0.0 Environment Variables Template
# Copy this file to .env and replace with your actual values
# NEVER commit .env file to version control

# =============================================================================
# API Keys - Use Environment Variables for Production
# =============================================================================

# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Security Best Practices
# =============================================================================

# For production, use:
# 1. System environment variables
# 2. Cloud key management (AWS Secrets Manager, Azure Key Vault)
# 3. DevDocAI's built-in encrypted storage:
#    config.set_api_key("openai", "your-key")  # Automatically encrypted

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Database settings (optional - system uses SQLite by default)
# DATABASE_URL=sqlite:///devdocai.db

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache settings
CACHE_TTL=3600
CACHE_SIZE=1000

# Performance settings
MAX_CONCURRENT_REQUESTS=8
BATCH_SIZE=50
MEMORY_LIMIT_MB=512

# Security settings
RATE_LIMIT_PER_SECOND=10
ENABLE_AUDIT_LOGGING=true
ENCRYPT_API_KEYS=true