{
  "name": "DevDocAI Python Dev with Tools",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreter": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true
      }
    }
  },
  
  "mounts": [
    // Mount your claude configuration (read-only for safety)
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,readonly",
    // Mount your local bin if you have tools there
    "source=${localEnv:HOME}/.local/bin,target=/home/vscode/.local/bin,type=bind,readonly"
  ],
  
  "postCreateCommand": "pip install --upgrade pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",
  
  "remoteUser": "vscode",
  
  "// Note": "Your Claude Code and other tools remain on your host machine and work normally"
}