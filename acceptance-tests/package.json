{
  "name": "devdocai-acceptance-tests",
  "version": "1.0.0",
  "description": "Acceptance test framework for DevDocAI v3.0.0",
  "main": "framework/DevDocAITestFramework.js",
  "directories": {
    "test": "suites"
  },
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:quick": "playwright test --project=chromium",
    "test:user-stories": "playwright test suites/user-stories.test.js",
    "test:integration": "playwright test integration/",
    "test:performance": "playwright test performance/",
    "setup": "node setup/global-setup.js",
    "teardown": "node setup/global-teardown.js",
    "validate": "node scripts/validate-system.js",
    "benchmark": "node scripts/run-benchmarks.js"
  },
  "keywords": [
    "devdocai",
    "acceptance-testing",
    "playwright", 
    "e2e-testing",
    "system-testing"
  ],
  "author": "DevDocAI Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "axios": "^1.6.0",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Org-EthereaLogic/DocDevAI-v3.0.0",
    "directory": "acceptance-tests"
  },
  "bugs": {
    "url": "https://github.com/Org-EthereaLogic/DocDevAI-v3.0.0/issues"
  },
  "homepage": "https://github.com/Org-EthereaLogic/DocDevAI-v3.0.0/tree/main/acceptance-tests"
}